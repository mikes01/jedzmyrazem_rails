section#main-content
  section.wrapper
    .row
      .col-md-4
        .row
          .col-md-6
            p.input-group
              input.form-control close-text="Close" datepicker-options="dateOptions" is-open="status.opened" min-date="minDate" ng-model="dt" ng-required="true" type="text" uib-datepicker-popup="{{format}}" ng-change="checkStartTime()"
              span.input-group-btn
                button.btn.btn-default ng-click="open($event)" type="button" 
                  i.glyphicon.glyphicon-calendar

        .row
            form.inline-form
              div.b Z:
              div.form-group.col-md-6 
                div.input-group
                  input.form-control ng-model="waypoints[0].place" g-places-autocomplete="" options="autocompleteOptions" force-selection="true" ng-change="getRoutePointsAndWaypoints()"
              div.input-group.col-md-5
                input.form-control bs-timepicker="" data-arrow-behavior="picker" data-length="1" data-minute-step="1" data-time-format="HH:mm" name="time" ng-model="waypoints[0].time" size="8" type="text" data-bs-show="waypoints[0].timeshow" trigger="manual" ng-change="updateTimes(0, {{waypoints[0].time}})"
                span.input-group-btn
                  button.btn.btn-default type="button" ng-click="waypoints[0].timeshow = !waypoints[0].timeshow"
                    i.glyphicon.glyphicon-time

        div ng-repeat="place in waypoints track by $index" ng-hide="$first || $last"
          .row
            form.inline-form
              div.form-group.col-md-6 
                div.input-group
                  input.form-control ng-model="waypoints[$index].place" g-places-autocomplete="" options="autocompleteOptions" force-selection="true" ng-change="getRoutePointsAndWaypoints()"
                  span.input-group-btn
                    button.btn.btn-default type="button" ng-click="removeWayPoint($index)"
                      i.glyphicon.glyphicon-remove
              div.input-group.col-md-5
                input.form-control bs-timepicker="" data-arrow-behavior="picker" data-length="1" data-minute-step="1" data-time-format="HH:mm" name="time" ng-model="waypoints[$index].time" size="8" type="text" data-bs-show="waypoints[$index].timeshow" trigger="manual" ng-change="updateTimes($index, {{waypoints[$index].time}})"
                span.input-group-btn
                  button.btn.btn-default type="button" ng-click="waypoints[$index].timeshow = !waypoints[$index].timeshow"
                    i.glyphicon.glyphicon-time

        .row
          .col-md-5
          button.btn.btn-default ng-click="addWayPoint()"
            i.glyphicon.glyphicon-plus

        .row
            form.inline-form
              div Do:
              div.form-group.col-md-6 
                div.input-group
                  input.form-control ng-model="waypoints[waypoints.length-1].place" g-places-autocomplete="" options="autocompleteOptions" force-selection="true" ng-change="getRoutePointsAndWaypoints()"
              div.input-group.col-md-5
                input.form-control bs-timepicker="" data-arrow-behavior="picker" data-length="1" data-minute-step="1" data-time-format="HH:mm" name="time" ng-model="waypoints[waypoints.length-1].time" size="8" type="text" data-bs-show="waypoints[waypoints.length-1].timeshow" trigger="manual" ng-change="updateTimes(waypoints.length-1, {{waypoints[waypoints.length-1].time}})"
                span.input-group-btn
                  button.btn.btn-default type="button" ng-click="waypoints[waypoints.length-1].timeshow = !waypoints[waypoints.length-1].timeshow"
                    i.glyphicon.glyphicon-time
          
        .row
          .col-md-4
            label Ilość miejsc:
            input.form-control type="number" min="1" max="8" ng-model="spaces"
        .row
          .col-md-4
          .col-md-3
            button.btn.btn-default ng-click="saveJourney()" Zapisz przejazd

      .col-md-8
        map center="{{map.center}}" zoom="{{map.zoom}}" width="100%"